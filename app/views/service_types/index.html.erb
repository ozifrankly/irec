<div class="page-content" ng-controller="ServiceTypeListCtrl">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Tipo de serviços</h1>
      </div><!-- /.page-header -->
      <div class="row">
        <div class="col-xs-6">
          <label class="input-group-addon" id="basic-addon1">Tipo de Serviço</label>
          <input type="text" class="form-control" aria-title="basic-addon1" ng-model="name">
          <button class="btn btn-success" ng-click='save()' style='margin-top:10px'>  
            Salvar
          </button>
        </div>
      </div>
       <hr>
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center" width="80%"> Nome</th>
                  <th class="center" width="20%"> Ação</th>
                </tr>
              </thead>
              <tbody>
              <tr ng-repeat="service_type in page.service_types">
                <td class="center">{{service_type.name}}</td>
                <td class="center">
                  <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">

                    <a href="#" class="btn btn-xs btn-info" ng-click="edit(service_type.name, service_type.id)">
                      <i class="icon-edit bigger-120"></i>
                    </a>

                  </div>
               </td>

              </tr>
             </tbody>
           </table>
           <paging total="page.total_items" page="page.current_page" paging-action="setPage(page)" page-size='pageSize'></paging>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->
    </div>
  </div>
</div>
