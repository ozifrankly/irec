<div class="page-content">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Usuários</h1>
      </div><!-- /.page-header -->
      <a href=<%= new_user_path %> class="btn btn-success">
        Novo Usuário
      </a>
      <hr>
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center"> Identificador</th>
                  <th class="center"> E-mail</th>
                  <th class="center"> Ações</th>
                </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
              <tr>
                <td class="center"><%= user.id %></td>
                <td class="center"><%= user.email %></td>

                <td>
                  <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                    <a ng-href="<%= user_path(user.id) %>" class="btn btn-xs btn-success">
                      <i class="glyphicon glyphicon-ok bigger-120"></i>
                    </a>

                    <a ng-href="<%= edit_user_path(user.id) %>" class="btn btn-xs btn-info">
                      <i class="glyphicon glyphicon-edit bigger-120"></i>
                    </a>

                    <a ng-href="<%= user_path(user.id) %>" data-method='delete' data-confirm="Você deseja apagar esse estudante?" class="btn btn-xs btn-danger">
                      <i class="glyphicon glyphicon-trash bigger-120"></i>
                    </a>
                  </div>
               </td>
              </tr>
              <% end %>
             </tbody>
           </table>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->
    </div>
  </div>
</div>
