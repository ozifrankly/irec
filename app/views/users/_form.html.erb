<%= form_for @user, html: { class:"form-horizontal" } do |f| %>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Email *:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.email_field :email, class:"col-xs-12 col-sm-6", required: 'true' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Senha *:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.password_field :password, class:"col-xs-12 col-sm-6" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Confirmação de senha *:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.password_field :password_confirmation, class:"col-xs-12 col-sm-6" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row-fluid wizard-actions">
    <button class="btn btn-success">Enviar</button>
  </div>
<% end %>
