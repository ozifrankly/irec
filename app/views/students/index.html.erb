<div class="page-content">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Estudantes</h1>
      </div><!-- /.page-header -->
      <a href=<%= new_student_path %> class="btn btn-success">  
        Novo Estudante
       </a>
       <hr>
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive" ng-controller="StudentsListCtrl">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center"> Nome</th>
                  <th>CPF</th>
                  <th>Documento</th>
                  <th>Nascimento</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
              <tr ng-repeat="student in page.students">
                <td>{{student.name}}</td>
                <td>{{student.cpf}}</td>
                <td>{{student.doc}}</td>
                <td>{{student.birthday | date: 'dd/MM/yyyy'}}</td>

                <td>
                  <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                    <a ng-href="students/{{student.id}}" class="btn btn-xs btn-success">
                      <i class="icon-ok bigger-120"></i>
                    </a>

                    <a ng-href="students/{{student.id}}/edit" class="btn btn-xs btn-info">
                      <i class="icon-edit bigger-120"></i>
                    </a>

                    <a ng-href="students/{{student.id}}" data-method='delete' data-confirm="Você deseja apagar esse estudante?" class="btn btn-xs btn-danger">
                      <i class="icon-trash bigger-120"></i>
                    </a>
                  </div>
               </td>
              </tr>
             </tbody>
           </table>
           <paging total="page.total_items" page="page.current_page" paging-action="setPage(page)" page-size='pageSize'></paging>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->
    </div>
  </div>
</div>
