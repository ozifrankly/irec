<%= form_for @student, html: { class:"form-horizontal" } do |f| %>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Nome *:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :name, class:"col-xs-12 col-sm-6", required: 'true' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">CPF:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :cpf, class:"col-xs-12 col-sm-6", mask:'999.999.999-99', 'ng-model':'cpf', 'ng-init':"cpf = #{@student.cpf}" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Documento:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :doc, class:"col-xs-12 col-sm-6" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Nascimento*:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :birthday, class:"col-xs-12 col-sm-6", mask:"39/99/9999", 'ng-model':'birthday', required: 'true' , 'ng-init':"birthday = '#{@student.birthday.try(:strftime,"%d/%m/%Y")}'"%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">MÃ©dico:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :doctor, class:"col-xs-12 col-sm-6" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">CRM:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.text_field :crm, class:"col-xs-12 col-sm-6" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-xs-12 col-sm-3 no-padding-right">Diagnosticos:</label>
    <div class="col-xs-12 col-sm-9">
      <div class="clearfix">
        <%= f.select :diagnostic_id, diagnostics_select, {},class:"col-xs-12 col-sm-6 max-select" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row-fluid wizard-actions">
    <button class="btn btn-success">Enviar</button>
  </div>
<% end %>

