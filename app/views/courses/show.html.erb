<div class="page-content" ng-controller="CourseShowCtrl" ng-init="init(<%= @course.id %>)">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Turma</h1>
      </div><!-- /.page-header -->
      <div class="profile-user-info profile-user-info-striped">
        <div class="profile-info-row">
          <div class="profile-info-name"> Nome </div>

          <div class="profile-info-value">
            <span class="editable" id="name"><%= @course.name %></span>
          </div>
        </div>

        <div class="profile-info-row">
          <div class="profile-info-name"> Serviço </div>

          <div class="profile-info-value">
            <span class="editable" id="service"><%= @course.service.name %></span>
          </div>
        </div>
      </div>
      <div class="col-xs-6" style="margin-top:10px;">
        <label class="input-group-addon" id="basic-addon1">Matrícula</label>
        <input type="text" class="form-control" aria-title="basic-addon1" ng-model="identifier">
        <button class="btn btn-success" ng-click='save()' style='margin-top:10px;margin-bottom:10px;'>
          Matrícular
        </button>
      </div>
      <table id="sample-table-1" class="table table-striped table-bordered table-hover" style="margin-left:15px;">
        <thead>
          <tr>
            <th class="center"> Matrícula</th>
            <th class="center"> Nome</th>
            <th>CPF</th>
            <th>Documento</th>
            <th>Nascimento</th>
          </tr>
        </thead>
        <tbody>
        <tr ng-repeat="student in students">
          <td class="center">{{student.id}}</td>
          <td class="center">{{student.name}}</td>
          <td class="center">{{student.cpf}}</td>
          <td class="center">{{student.doc}}</td>
          <td class="center">{{student.birthday | date: 'dd/MM/yyyy'}}</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
