<div class="page-content" ng-controller="CourseListCtrl">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Turmas</h1>
      </div><!-- /.page-header -->
      <div class="row">
        <div class="col-xs-6">
          <label class="input-group-addon" id="basic-addon1">Turma</label>
          <input type="text" class="form-control" aria-title="basic-addon1" ng-model="name">
          <label class="input-group-addon" id="basic-addon1">Serviço</label>
          <%= select '', '', service_select, {}, class:"form-control", 'aria-title':"basic-addon1", 'ng-model':"service_id" %>
          <button class="btn btn-success" ng-click='save()' style='margin-top:10px'>
            Salvar
          </button>
        </div>
      </div>
       <hr>
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center" width="40%"> Nome</th>
                  <th class="center" width="40%"> Serviço</th>
                  <th class="center" width="20%"> Ação</th>
                </tr>
              </thead>
              <tbody>
              <tr ng-repeat="course in page.courses">
                <td class="center">{{course.name}}</td>
                <td class="center">{{course.service.name}}</td>
                <td class="center">
                  <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                    <a ng-href="courses/{{course.id}}" class="btn btn-xs btn-success">
                      <i class="glyphicon glyphicon-ok bigger-120"></i>
                    </a>

                    <a href="#" class="btn btn-xs btn-info" ng-click="edit(course.name, course.service.id, course.id)">
                      <i class="glyphicon glyphicon-edit bigger-120"></i>
                    </a>

                  </div>
               </td>

              </tr>
             </tbody>
           </table>
           <paging total="page.total_items" page="page.current_page" paging-action="setPage(page)" page-size='pageSize'></paging>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->
    </div>
  </div>
</div>
