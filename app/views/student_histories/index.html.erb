<div class="page-content" ng-controller="StudentHistoriesListCtrl">
  <div class="row">
    <div class="col-xs-10">
      <div class="page-header">
        <h1>Historico</h1>
      </div><!-- /.page-header -->
      <div class="row">
        <div class="col-xs-6">
          <label class="input-group-addon" id="basic-addon1">Titulo</label>
          <input type="text" class="form-control" aria-title="basic-addon1" ng-model="newHistory.title">
          <span class="input-group-addon" id="basic-addon1">Descrição</span>
          <textarea class="form-control" aria-describedby="basic-addon1" rows="5" ng-model="newHistory.description"></textarea>
          <button class="btn btn-success" ng-click='saveNewHistory()' style='margin-top:10px'>  
            Salvar
          </button>
        </div>
      </div>
       <hr>
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center" width="20%"> Titulo</th>
                  <th class="center" width="80%"> Descrição</th>
                </tr>
              </thead>
              <tbody>
              <tr ng-repeat="history in page.student_histories">
                <td class="center">{{history.title}}</td>
                <td class="center">{{history.description}}</td>
              </tr>
             </tbody>
           </table>
           <paging total="page.total_items" page="page.current_page" paging-action="setPage(page)" page-size='pageSize'></paging>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->
    </div>
  </div>
</div>
